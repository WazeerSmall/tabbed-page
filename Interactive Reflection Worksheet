    <script>
        function updateProgress() {
            const textareas = document.querySelectorAll('textarea');
            let filledCount = 0;
           
            textareas.forEach(textarea => {
                if (textarea.value.trim().length > 10) {
                    filledCount++;
                    textarea.classList.add('completed');
                } else {
                    textarea.classList.remove('completed');
                }
            });
           
            const progressPercent = (filledCount / textareas.length) * 100;
            document.getElementById('progressBar').style.width = progressPercent + '%';
           
            if (filledCount === textareas.length) {
                document.getElementById('completionMessage').style.display = 'block';
            } else {
                document.getElementById('completionMessage').style.display = 'none';
            }
        }

        document.querySelectorAll('textarea').forEach(textarea => {
            textarea.addEventListener('input', updateProgress);
           
            // Auto-resize functionality
            textarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        });

        function submitReflection() {
            const textareas = document.querySelectorAll('textarea');
            let allFilled = true;
            let responses = {};
           
            textareas.forEach(textarea => {
                if (textarea.value.trim().length < 10) {
                    allFilled = false;
                    textarea.style.borderColor = '#ff6b6b';
                    textarea.style.boxShadow = '0 0 15px rgba(255, 107, 107, 0.3)';
                } else {
                    textarea.style.borderColor = '#4a7c59';
                    responses[textarea.id] = textarea.value.trim();
                }
            });
           
            if (allFilled) {
                // Success animation
                const btn = document.querySelector('.submit-btn');
                btn.innerHTML = '‚úÖ Submitted Successfully!';
                btn.style.background = 'linear-gradient(135deg, #4CAF50 0%, #45a049 100%)';
               
                setTimeout(() => {
                    alert('üéâ Thank you! Your thoughtful reflection has been submitted successfully.\n\nYour responses demonstrate excellent engagement with ESD concepts and will help guide your continued learning journey.');
                }, 500);
               
                console.log('Submitted responses:', responses);
                // In a real environment, this would submit to the LMS
            } else {
                alert('üìù Please complete all reflection sections with meaningful responses (at least 10 characters each) before submitting.');
               
                // Focus on first incomplete field
                const firstIncomplete = document.querySelector('textarea:not(.completed)');
                if (firstIncomplete) {
                    firstIncomplete.focus();
                    firstIncomplete.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            }
        }

        // Initialize progress on page load
        updateProgress();
    </script>
</body>
